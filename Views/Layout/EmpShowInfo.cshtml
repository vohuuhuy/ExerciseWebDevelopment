@model ExerciseWebDevelopment.Models.EmpModel;

@{
  Layout = "_LayoutAdmin";
}

<div style="text-align: center;">
	<h4>THÔNG TIN THÀNH VIÊN ĐÃ ĐĂNG KÝ</h4>
  <div class="info-emp">
    <img src="@Url.Content("~/images/" + @Model.Avatar)" alt="Ảnh đại diện" class="info-emp" />
    <div style="text-align: start;">
      Mã nhân viên: @Model.EmpID
      <br />
      Họ tên: @Model.Name
      <br />
      Ngày sinh: @Model.BirthOfDate
      <br />
      Email: @Model.Email
      <br />
      Mật khẩu: @Model.Password
      <br />
      Phòng ban: @Model.Department
    </div>
  </div>
  <a href="@Url.Action("Emp", "Layout")">Quay lại</a>
</div>